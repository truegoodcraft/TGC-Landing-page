{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Google Drive Read Plugin Settings",
  "type": "object",
  "properties": {
    "auth_profile": {
      "type": "string",
      "description": "Core auth profile id managed by BUS OAuth",
      "default": "bus:google"
    },
    "folder_allowlist": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Drive folder IDs that are permitted"
    },
    "mime_allowlist": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Allowed MIME types"
    },
    "max_page_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 200,
      "default": 200,
      "description": "Maximum page size for list operations"
    }
  },
  "additionalProperties": false
}
